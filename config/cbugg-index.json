{
    "settings" : {
		"index.mapping.ignore_malformed": true,
		"index.analysis.analyzer.default.type": "snowball"
    },
    "mappings" : {
		"couchbaseDocument" : {
			"properties" : {
				"doc" : {
					"properties": { 
						"title": {
						    "type": "string",
							"analyzer" : "snowball"
						},
						"description": {
						    "type": "string",
							"analyzer" : "snowball"
						},
						"type": {
						    "type": "string", 
							"index" : "not_analyzed"
						},
						"parent": { 
							"type": "string", 
							"index" : "not_analyzed"
						},
						"status": { 
							"type": "string", 
							"index" : "not_analyzed"
						},
						"creator": { 
							"type": "string", 
							"index" : "not_analyzed"
						},
						"owner": {
							"type": "string", 
							"index" : "not_analyzed"
						},
						"tags": {
							"type": "string", 
							"index" : "not_analyzed"
						},
						"subscribers": {
							"type": "string", 
							"index" : "not_analyzed"
						}
					}
				}
			}
		}
    }
}